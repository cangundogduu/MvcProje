@using Entity.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<br />

<table class="table table-bordered" style="margin-bottom:20px">
    <tr>
        <th>#</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.CategoryName</td>
            <td><a href="/AdminCategory/DeleteCategory/@item.CategoryId"><i style="color:red" class="fa fa-trash"></i></a></td>
            <td><a href="/AdminCategory/EditCategory/@item.CategoryId"><i class="fa fa-pen"></i></a></td>
            <td><a href="#"><i style="color:black" class="fa fa-bookmark"></i></a></td>

        </tr>
    }

</table>

<a href="/AdminCategory/AddCategory/" class="btn btn-info">Yeni Kategori Ekle</a>