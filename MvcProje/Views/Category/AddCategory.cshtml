@model Entity.Concrete.Category
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddCategory","Category",FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName)
        @Html.ValidationMessageFor(x => x.CategoryName)
        <br />
        @Html.Label("Kategori Açıklaması")
        @Html.TextBoxFor(x => x.CategortyDescription)
        @Html.ValidationMessageFor(x => x.CategortyDescription)
        <br />
        <button class="btn btn-info">Kaydet</button>
    </div>
}




