
@{
    Layout = null;
}

<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />
<form class="form-group" method="post">

    <div class="form-group">
        <label>Kategori Adı</label>
        <input class="form-control" type="text" name="CategoryName" />
    </div>
    <div class="form-group">
        <label>Kategori Açıklama</label>
        <input class="form-control" type="text" name="CategoryDescription" />
    </div>
    <div class="form-group">
        <label>Kategori Durum</label>
        <input class="form-control" type="text" name="CategoryStatus" />
    </div>
    <div class="form-group">
        <button class="btn btn-success" type="submit">Ekle</button>
    </div>
</form>